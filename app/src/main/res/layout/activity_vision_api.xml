<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/background"
        android:title="@string/vision_api_title"
        app:titleTextColor="@color/text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vision_api_hint"
                android:textColor="@color/text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/visionKeyInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_bubble"
                android:hint="@string/vision_api_key_hint"
                android:inputType="textPassword"
                android:padding="16dp"
                android:textColor="@color/text"
                android:textColorHint="@color/hint"
                android:textSize="@dimen/text_size_body" />

            <EditText
                android:id="@+id/visionBaseInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_bubble"
                android:hint="@string/vision_api_base_hint"
                android:inputType="textUri"
                android:padding="16dp"
                android:textColor="@color/text"
                android:textColorHint="@color/hint"
                android:textSize="@dimen/text_size_body" />

            <EditText
                android:id="@+id/visionModelInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_bubble"
                android:hint="@string/vision_model_hint"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="@color/text"
                android:textColorHint="@color/hint"
                android:textSize="@dimen/text_size_body" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/bg_bubble"
                android:text="@string/save"
                android:textColor="@color/text"
                android:textSize="@dimen/text_size_body" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
